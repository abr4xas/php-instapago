{
    "name": "instapago/instapago",
    "description": "Librer√≠a Instapago para PHP",
    "keywords": [
        "instapago",
        "instapago"
    ],
    "homepage": "https://github.com/instapago/instapago",
    "license": "MIT",
    "authors": [
        {
            "name": "angel cruz",
            "email": "angel@tepuilabs.dev",
            "homepage": "https://angelcruz.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.2",
      "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Instapago\\Instapago\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Instapago\\Instapago\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
		"all" : "composer psalm && composer test && composer test-coverage && composer format"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
