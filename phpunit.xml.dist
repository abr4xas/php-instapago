<phpunit bootstrap="vendor/autoload.php" 
    colors="true" 
    verbose="true">
  <testsuites>
    <testsuite name="instapago">
      <directory>tests/</directory>
    </testsuite>
  </testsuites>
  <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">Instapago</directory>
        </whitelist>
    </filter>
</phpunit>
